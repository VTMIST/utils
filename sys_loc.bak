#!/bin/bash

# These dates are verified by HSKP data, only after the Garmin GPS acquires a sync. There may be data recorded prior to sync.
# Dont trust that data.

if [[ $# -lt 2 ]] || [[ $1 -gt 8 ]]; then
	echo "Usage: sys_loc [system number {0-6,8}] [YYYYMMDD]"
	echo "Output: Site [PG0-PG5, SP, VT, MCH]"
else
	indate=$(date -d $2 +%s)
	echo $indate

	case $1 in
		"1" )
			echo "PG1"
			;;
		"2" )
			if [[ $indate -ge $(date -d "2009-01-08 23:16:22" +%s) ]] && [[ $indate -le $(date -d "2010-12-28 01:46:41" +%s) ]]; then
				echo "PG2"
			elif [[ $indate -ge $(date -d "2011-12-30 04:12:08" +%s) ]] && [[ $indate -le $(date -d "2011-12-31 23:12:08" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2013-07-19 18:27:30" +%s) ]] && [[ $indate -le $(date -d "2013-07-19 18:40:45" +%s) ]]; then
				echo "MCH"
			elif [[ $indate -ge $(date -d "2013-12-31 03:38:00" +%s) ]] && [[ $indate -le $(date -d "2014-12-11 00:59:45" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2014-12-28 02:47:30" +%s) ]]; then
				echo "PG0"
			else
				echo "NA"
			fi
			;;
		"3" ) # verified with HSKP by SEC
			if [[ $indate -ge $(date -d "2011-02-14 18:43:00" +%s) ]] && [[ $indate -le $(date -d "2011-12-20 23:59:45" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2012-01-09 02:10:00" +%s) ]] && [[ $indate -le $(date -d "2012-04-30 23:59:45" +%s) ]]; then
				echo "PG2"
			elif [[ $indate -ge $(date -d "2013-07-12 17:28:15" +%s) ]] && [[ $indate -le $(date -d "2013-07-19 18:05:00" +%s) ]]; then
				echo "MCH"
			elif [[ $indate -ge $(date -d "2013-12-29 02:46:45" +%s) ]] && [[ $indate -le $(date -d "2014-06-07 21:59:45" +%s) ]]; then
				echo "SP" 
			elif [[ $indate -ge $(date -d "2014-9-30 14:19:00" +%s) ]] && [[ $indate -le $(date -d "2014-10-06 19:18:00" +%s) ]]; then
				echo "MCH"
			elif [[ $indate -ge $(date -d "2014-10-24 22:10:00" +%s) ]] && [[ $indate -le $(date -d "2015-12-22 23:59:45" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2016-01-06 05:29:30" +%s) ]]; then
				echo "PG5"
			else
				echo "NA"
			fi
			;;
		"4" ) # verified with HSKP by SEC
			if [[ $indate -ge $(date -d "2011-02-14 19:16:45" +%s) ]] && [[ $indate -le $(date -d "2012-12-26 04:59:45" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2012-12-27 00:53:45" +%s) ]]; then
				echo "PG2" 
			else
				echo "NA"
			fi
			;;
		"5" ) # verified with HSKP by SEC
			if [[ $indate -ge $(date -d "2011-05-09 18:25:15" +%s) ]] && [[ $indate -le $(date -d "2011-07-04 23:59:45" +%s) ]]; then
				echo "VT"
			elif [[ $indate -ge $(date -d "2011-08-08 17:36:45" +%s) ]] && [[ $indate -le $(date -d "2012-08-09 19:38:15" +%s) ]]; then
				echo "MCH"
			elif [[ $indate -ge $(date -d "2011-09-07 17:20:15" +%s) ]] && [[ $indate -le $(date -d "2011-09-07 17:59:45" +%s) ]]; then
				echo "VT"
			elif [[ $indate -ge $(date -d "2011-12-26 02:17:15" +%s) ]] && [[ $indate -le $(date -d "2012-12-21 02:59:45" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2013-01-03 22:12:15" +%s) ]]; then
				echo "PG3"
			else
				echo "NA"
			fi
			;;
		"6" ) # verified with HSKP by SEC
			if [[ $indate -ge $(date -d "2011-02-11 20:03:30" +%s) ]] && [[ $indate -le $(date -d "2011-07-12 17:54:00" +%s) ]]; then
				echo "MCH"
			elif [[ $indate -ge $(date -d "2011-12-28 03:28:00" +%s) ]] && [[ $indate -lt $(date -d "2013-12-29 20:59:45" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2014-01-05 05:10:00" +%s) ]] && [[ $indate -lt $(date -d "2017-12-28 21:59:45" +%s) ]]; then
				echo "PG4"
			elif [[ $indate -ge $(date -d "2018-05-12 18:35:30" +%s) ]] && [[ $indate -lt $(date -d "2018-09-11 14:59:45" +%s) ]]; then
				echo "VT"
			elif [[ $indate -ge $(date -d "2019-01-10 01:42:00" +%s) ]]; then
				echo "PG4"
			else
				echo "NA"
			fi
			;;
		"8" )
			if [[ $indate -ge $(date -d "2017-12-01" +%s) ]] && [[ $indate -le $(date -d "2017-12-27" +%s) ]]; then
				echo "SP"
			elif [[ $indate -ge $(date -d "2017-12-28" +%s) ]] && [[ $indate -lt $(date -d "2019-01-09" +%s) ]]; then
				echo "PG4"
			else
				echo "NA"
			fi
			;;
		* )
			echo "Usage: sys_loc [system number {0-6,8}] [YYYYMMDD]"
			echo "Output: Site [PG0-PG5, SP, VT, MCH]"
	esac
fi

